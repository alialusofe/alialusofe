        </div>

        <!-- Main Content -->
        <div class="main-content" id="homeScreen">
            <div class="welcome-section">
                <h2>اختبارات الكيمياء - الثاني متوسط</h2>
                <p>Chemistry Tests for 2nd Intermediate - Gifted Schools</p>
            </div>

            <div class="stats-grid">
                <div class="stat-card">
                    <h3>85%</h3>
                    <p>متوسط الدرجات</p>
                </div>
                <div class="stat-card">
                    <h3>12</h3>
                    <p>الاختبارات المكتملة</p>
                </div>
            </div>

            <div class="chapter-list">
                <div class="chapter-item" onclick="startQuiz('atoms')">
                    <div class="chapter-title">Chapter 1: Atomic Structure</div>
                    <div class="chapter-info">
                        <span>15 Questions</span>
                        <span>⏱️ 20 min</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 90%"></div>
                    </div>
                </div>

                <div class="chapter-item" onclick="startQuiz('periodic')">
                    <div class="chapter-title">Chapter 2: Periodic Table</div>
                    <div class="chapter-info">
                        <span>20 Questions</span>
                        <span>⏱️ 25 min</span>
                    </div>
                    <div class="progress-bar">
                        <div class="progress-fill" style="width: 75%"></div>
                    </div>
                </div>

                <div class="chapter-item" onclick="startQuiz('bonding')">
