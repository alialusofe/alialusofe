                <div class="option" onclick="selectOption(3)">D) Nucleus</div>
            </div>

            <div class="quiz-buttons">
                <button class="btn btn-secondary" onclick="previousQuestion()">السابق</button>
                <button class="btn btn-primary" onclick="nextQuestion()" id="nextBtn">التالي</button>
            </div>
        </div>

        <!-- Results Screen -->
        <div class="results-container" id="resultsScreen">
